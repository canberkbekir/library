        <link rel="stylesheet" href="style.css">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body class="h-100 background-image" style="background-image: url('/login.jpg'); height: 100vh;">
  <div class="container-fluid h-100 mt-3">
  
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
    <form class="form-example bg-light text-center" action="/auth/register" method="POST">
      <h1 class="">Kayıt Ol</h1>
      <p> Lütfen kayıt olmak için ilgili alanları doldurunuz!</p>
      <div class="form-group mb-3 px-5">
        <label for="exampleInputEmail1" class="form-label">İsim</label>
        <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group mb-3 px-5">
          <label for="exampleInputEmail1" class="form-label">Soyisim</label>
          <input type="text" class="form-control" id="last_name" name="last_name">
          </div>
          <div class="form-group mb-3 px-5">
            <label for="exampleInputEmail1" class="form-label">Tel No</label>
            <input type="tel" class="form-control" id="tel_no" name="tel_no">
            </div>
            <div class="form-group mb-3 px-5">
              <label for="exampleInputEmail1" class="form-label">Adres</label>
              <input type="text" class="form-control" id="adress" name="adress">
              </div>
                
        <div class="form-group mb-3 px-5">
          <label for="exampleInputEmail1" class="form-label">Eposta Adresi</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">E postanızı kimse ile paylaşmayınız.</div>
        </div>
        <div class="form-group mb-3 px-5">
          <label for="exampleInputPassword1" class="form-label">Şifre</label>
          <input type="password"  class="form-control" id="password" name="password">
        </div>
        <div class="form-group mb-3 px-5">
          <label for="exampleInputPassword1" class="form-label">Şifrenizi Tekrar Giriniz</label>
          <input type="password"  class="form-control" id="passwordConfirm" name="passwordConfirm">
        </div>
        
        <button type="submit" class="btn btn-primary btn-customized mb-3">Kayıt Ol</button>
        <p> Giriş yapın ve keşfe devam edin!</p>
        <button class="btn btn-dark mb-3"><a href="/" class="text-decoration-none">Giriş Yap</a></button>
        {{#if message}}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>
        {{/if}}
      </form>
      
     
      
    </div>
  </div>
 
</div>

</div>


    </div>

    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
